                <ProgressBar x:Name="progressBar2" HorizontalAlignment="Left" Height="24" Margin="10,585,10,0" VerticalAlignment="Top" Width="980"/>
                <Label x:Name="label1" Content="" HorizontalAlignment="Left" Margin="10,620,10,0" VerticalAlignment="Top" Width="980" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
            </Grid>
        </Viewbox>

    </Grid>
</Window>
